<Window x:Class="ALife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ALife"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Width="16" Height="16" Click="StartButtonClick">
                <Image Source="Media/Run_16x.png" />
            </Button>
            <Button Width="16" Height="16" Click="StopButtonClick">
                <Image Source="Media/Stop_16x.png" />
            </Button>
        </ToolBar>
        <Viewbox Stretch="Fill">
            <Canvas Name="MainCanvas">
            </Canvas>
        </Viewbox>
    </DockPanel>
</Window>
